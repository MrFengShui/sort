{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "packageManager": "bun"
    },
    "newProjectRoot": "projects",
    "projects": {
        "sort": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss",
                    "standalone": false
                },
                "@schematics/angular:directive": {
                    "standalone": false
                },
                "@schematics/angular:pipe": {
                    "standalone": false
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "ngx",
            "architect": {
                "build": {
                    "builder": "@angular-builders/custom-webpack:browser",
                    "options": {
                        "customWebpackConfig": {
                            "path": "webpack.config.js",
                            "mergeRules": {
                                "plugins": "prepend"
                            },
                            "replaceDuplicatePlugins": true,
                            "verbose": {
                                "properties": [
                                    "entry"
                                ]
                            }
                        },
                        "i18nMissingTranslation": "error",
                        "localize": true,
                        "allowedCommonJsDependencies": [
                            "moment"
                        ],
                        "baseHref": "/sort/web/",
                        "outputPath": "dist/sort",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": [
                            "zone.js"
                        ],
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/assets",
                            "src/assets/favicon.ico"
                        ],
                        "styles": [
                            "src/assets/styles.scss"
                        ],
                        "outputHashing": "all",
                        "extractLicenses": true,
                        "optimization": false,
                        "sourceMap": true,
                        "scripts": [],
                        "verbose": true
                    },
                    "configurations": {
                        "dev-i18n-en": {
                            "localize": [
                                "en-US"
                            ],
                            "baseHref": "/sort/web/en-US/",
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2MB",
                                    "maximumError": "4MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "256KB",
                                    "maximumError": "512KB"
                                },
                                {
                                    "type": "anyScript",
                                    "maximumWarning": "4MB",
                                    "maximumError": "8MB"
                                }
                            ]
                        },
                        "dev-i18n-zh": {
                            "localize": [
                                "zh-CN"
                            ],
                            "baseHref": "/sort/web/zh-CN/",
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2MB",
                                    "maximumError": "4MB"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "128KB",
                                    "maximumError": "256KB"
                                },
                                {
                                    "type": "anyScript",
                                    "maximumWarning": "4MB",
                                    "maximumError": "8MB"
                                }
                            ]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-builders/custom-webpack:dev-server",
                    "configurations": {
                        "dev-i18n-en": {
                            "buildTarget": "sort:build:dev-i18n-en",
                            "servePath": "/sort/web/en-US/",
                            "port": 8585
                        },
                        "dev-i18n-zh": {
                            "buildTarget": "sort:build:dev-i18n-zh",
                            "servePath": "/sort/web/zh-CN/",
                            "port": 8888
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-builders/custom-webpack:extract-i18n",
                    "options": {
                        "buildTarget": "sort:build",
                        "format": "json",
                        "outputPath": "src/assets/i18n",
                        "outFile": "messages.i18n.json"
                    }
                },
                "test": {
                    "builder": "@angular-builders/custom-webpack:karma",
                    "options": {
                        "customWebpackConfig": {
                            "path": "webpack.config.js",
                            "mergeRules": {
                                "plugins": "prepend"
                            },
                            "replaceDuplicatePlugins": true
                        },
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ],
                        "tsConfig": "tsconfig.spec.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/assets",
                            "src/assets/favicon.ico"
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": []
                    }
                }
            },
            "i18n": {
                "sourceLocale": "en-US",
                "locales": {
                    "zh-CN": {
                        "translation": "src/assets/i18n/messages.zh-CN.json"
                    }
                }
            }
        }
    }
}